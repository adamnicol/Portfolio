{
  "configurations": [
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/server/",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "outputCapture": "std"
    },
    {
      "name": "Client",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/client/",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "env": {
        "Browser": "none"
      }
    },
    {
      "name": "Firefox",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost:5173",
      "pathMappings": [
        {
          "url": "http://localhost:5173/src",
          "path": "${workspaceFolder}/client/src"
        }
      ]
    },
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173"
    }
  ],
  "compounds": [
    {
      "name": "Portfolio",
      "configurations": ["Server", "Client", "Firefox"],
      "stopAll": true
    }
  ]
}
